<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CameraViewGl">
    <Button
        android:id="@+id/btStart"
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <Button
        app:layout_constraintLeft_toRightOf="@id/btStart"
        android:id="@+id/btStop"
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <com.baolan.liangchao.camera.MyGLSurfaceView
        app:layout_constraintTop_toBottomOf="@id/btStart"
        android:id="@+id/glPanel"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />
    <com.baolan.liangchao.camera.MyGLSurfaceView
        app:layout_constraintTop_toBottomOf="@id/btStart"
        app:layout_constraintLeft_toRightOf="@id/glPanel"
        android:id="@+id/glPanel1"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />
    <com.baolan.liangchao.camera.MyGLSurfaceView
        app:layout_constraintTop_toBottomOf="@id/btStart"
        app:layout_constraintLeft_toRightOf="@id/glPanel1"
        android:id="@+id/glPanel2"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />
    <com.baolan.liangchao.camera.MyGLSurfaceView
        app:layout_constraintTop_toBottomOf="@id/btStart"
        app:layout_constraintLeft_toRightOf="@id/glPanel2"
        android:id="@+id/glPanel3"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>